#!/usr/bin/env bash
WTMK='[chaotic-batchbuild]'
CNUM="${CHAOTIC_CNUM:-$(expr $(nproc) / 2)}"

echo "$WTMK Limited at $CNUM jobs."

limit_build() {
	while [ `jobs -rp | wc -l` -ge $CNUM ]; do
		sleep 3
	done
}

one_build() {
	cd "./$1";
	set -o pipefail
	~/chaotic-makepkg -cC --noconfirm $MAKEPKG_ARGS  2>&1 | tee ../$1.log && cd ..  && rm -rf "./$1" || cd ..
	set +o pipefail
	echo "$WTMK Leaving: $1"
	~/chaotic-add 2>&1 | tee -a _add.log
}

for dir in ${@:-*}; do
	if [[ -d "$dir" ]]; then
		limit_build
		echo "$WTMK Building: $dir"
		one_build "${dir%/}" &
		sleep 1
	elif [[ "$dir" = "--" ]]; then
		echo "$WTMK Trapped in a wait"
		wait
	else
		echo "$WTMK Unknow option: \"$dir\""
	fi
done

echo "$WTMK Waiting all jobs to finish..."
wait

